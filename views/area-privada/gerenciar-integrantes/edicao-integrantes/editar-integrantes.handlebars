<title>Registrar Integrantes - Meninas e Mulheres na Ciência</title>
<meta name="description"
  content='Área privada reservada para a edição de integrantes do projeto "Meninas e Mulheres na Ciência"'>
</head>

<body onload="selecionarOpcaoPreDefinida({})">
  {{>area-restrita/header-restrita}}
  <main>
    <section>
      {{>area-restrita/voltar-e-logo caminho="/restrito/gerenciar/integrantes"}}
      <div class="texto-Titulo titulo-dados-integrante">
      </div>

      {{#if objetoAEditar}}
      <form class="formulario-registro" action="/restrito/update/integrante/{{objetoAEditar.id}}" method="post">
        {{else}}
        <form class="formulario-registro" action="/restrito/registrar/integrante" method="post">
          {{/if}}

          <span>Nome: </span>
          <input type="text" name="nome" required="required" value="{{objetoAEditar.nome}}">

          <span>Cargo: </span>
          <select id="{{objetoAEditar.cargoIntegrante}}" name="cargoIntegrante" required="required">
            <option value="Bolsista">Bolsista</option>
            <option value="Voluntário">Voluntário</option>
            <option value="Coordenador">Coordenador</option>
          </select>

          <span>CPF: </span>
          <input type="number" name="cpfIntegrante" required="required" value="{{objetoAEditar.cpfIntegrante}}" />

          <span>RG: </span>
          <input type="number" name="rgIntegrante" required="required" value="{{objetoAEditar.rgIntegrante}}" />

          <span>Telefone: </span>
          <input type="text" name="telefone" required="required" value="{{objetoAEditar.telefone}}" />

          <span>E-mail: </span>
          <input type="email" name="email" required="required" value="{{objetoAEditar.email}}" />

          <input type="submit" value="Salvar">
        </form>


    </section>

  </main>
  <footer>

  </footer>
</body>