<title>Registrar Trabalhos Acadêmicos - Meninas e Mulheres na Ciência</title>
<meta name="description"
  content='Área privada reservada para a edição de trabalho acadêmicos do projeto "Meninas e Mulheres na Ciência"'>
</head>

<body onload="selecionarOpcaoPreDefinida({})">
  {{>area-restrita/header-restrita}}
  <main>
    <section>
      {{>area-restrita/voltar-e-logo caminho="/restrito/gerenciar/teses"}}
      <div class="texto-Titulo titulo-dados-integrante">
      </div>

      {{#if objetoAEditar}}
      <form class="formulario-registro" action="/restrito/update/trabalho-academico/{{objetoAEditar.id}}" method="post">
        {{else}}
        <form class="formulario-registro" action="/restrito/registrar/trabalho-academico" method="post">
          {{/if}}

          <span>Nome da tese: </span>
          <input type="text" name="tituloTrabalho" required="required" value="{{objetoAEditar.tituloTrabalho}}">

          <span>Categoria: </span>
          <select id="{{objetoAEditar.categoriaTrabalho}}" name="categoriaTrabalho" required="required">
            <option value="Dissertação">Dissertação</option>
            <option value="Tese">Tese</option>
          </select>

          <span>Data de publicação: </span>
          <input type="date" name="dataPublicacao" required="required" value="{{objetoAEditar.dataPublicacao}}" />

          <span>Autor: </span>
          <input type="text" name="autor" required="required" value="{{objetoAEditar.autor}}" />

          <span>Instituição: </span>
          <input type="text" name="instituicao" required="required" value="{{objetoAEditar.instituicao}}" />


          <span>Link: </span>
          <input type="text" name="linkTrabalho" required="required" value="{{objetoAEditar.linkTrabalho}}" />

          <input type="submit" value="Salvar">
        </form>


    </section>

  </main>
  <footer>

  </footer>
</body>